            .header__hero-overlay &nbsp;
            img.header__hero-img(src='/img/tours/'+ tour.imageCover, alt= tour.imageCover.split('.')[0])

        .heading-box
            h1.heading-primary
                span #{tour.name}
            .heading-box__group
                .heading-box__detail
                    svg.heading-box__icon
                        use(xlink:href='/img/icons.svg#icon-clock')
                    span.heading-box__text #{tour.duration} days
